{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "rules": {
    "no-unused-vars": [
      "warn",
      { "args": "none", "argsIgnorePattern": "req|res|next|val" }
    ],
    "no-var": "error",
    "eqeqeq": ["error", "smart"],
    "prettier/prettier": ["error"]
  },
  "settings": {
    "react": {
      "version": "^16.14.0"
    }
  }
}
